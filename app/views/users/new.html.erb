<html>
<head>
    <title>注册</title>
    <meta charset = 'utf8'>
    
</head>
<body class="register-body">
    <h1 class="register-header">果壳推书账号</h1>
	<h2 class="register-subtitle">欢迎加入果壳推书</h2>
    <%= form_for(@user,:url=>"/users/create") do |f| %>
        <div class="field">
            <%= f.label :"学号：" %>
            <%= f.text_field :userid,:class=>"userid" %> <%= f.label :"   请输入您的15位学号" %>
        </div>
        <div class="field">
            <%= f.label :"姓名：" %>
            <%= f.text_field :username , :id=>"username" %><%= f.label :"   请输入您的姓名" %>
        </div>
        <div class="field">
            <%= f.label :"密码：" %>
            <%= f.password_field :password, :id=>"password1" %><%= f.label :"   请输入6--20位密码" %>
        </div>
        <div class="field">
            <%= f.label :"确认：" %>
            <%= f.password_field :password_confirmation, :id=>"password2" %><%= f.label :"   请确认密码" %>
        </div>
        <div class="field">
            <%= f.label :"  性别：" %>
            <%= select_tag :sex, options_for_select([["男", "1"],["女", "0"]]),:id=>"sex" %>
        </div>

        <div class="reg_agreement_actions" id="submit">
            <%= f.submit :"提交注册"  %>
        </div>
    <% end %>
            <div class="relogin">
			<div >
				<span>>已经拥有果壳推书帐号?</span>
				<%=link_to "直接登陆",:controller=>'home',:action=>'login' %>
			</div>
		</div>
</body>
</html>