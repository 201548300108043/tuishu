<html>
<head>
    <title>登录</title>
    <meta charset = 'utf8'>
</head>
<body class="login-body">
    <h1 class="register-header">果壳推书账号</h1>
	<h2 class="register-subtitle">欢迎加入果壳推书</h2>
    <%= form_for(:user,:url=>"/home/checkLogin") do |f| %>
        <div class="field">
            <%= f.label :"学号：" %>
            <%= f.text_field :userid %>
        </div>
        <div class="field">
            <%= f.label :"密码：" %>
            <%= f.password_field :password %>
        </div>
        <div class="reg_agreement_actions">
            <%= f.submit :"提交登陆"%>
        </div>
        
  	<div class="relogin">
		<div >
			<span>>还没有果壳推书帐号?</span>
			<%=link_to "立即注册",:controller=>'users',:action=>'new' %>
		</div>
	</div>
    <% end %>

</body>
</html>